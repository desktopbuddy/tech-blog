<section class="main-section">
  <h2>Edit post</h2>
  <div class="card">
    <form class="edit-post-form">
      <div class="form-group">
        <input class="form-input" type="text" id="edit-post-title" placeholder="Title" value="{{post.title}}"/>
      </div>
      <div class="form-group">
        <textarea id="edit-post-content" name="edit-post-content" placeholder="Write your post here...">{{post.content}}</textarea>
      </div>
      <div class="form-group" id="edit-buttons">
        <button class="btn btn-primary" type="submit">Save changes</button>
        <button class="btn-delete" id="delete-post-btn">Delete</button>
      </div>
    </form>
  </div>
</section>

<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>