<section class="main-section">
    <h2>Create a new post</h2>
  <div class="card">
    <form class="create-post-form">
      <div class="form-group">
        <input class="form-input" type="text" id="create-post-title" placeholder="Title" />
      </div>
      <div class="form-group">
        <textarea id="create-post-content" name="create-post-content" placeholder="Write your post here..."></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Post</button>
      </div>
    </form>
  </div>
</section>

<script src="/js/create-post.js"></script>